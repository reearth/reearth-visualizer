{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "@reearth/*": ["src/*"],
      "@reearth-widget-ui/*": ["src/app/lib/reearth-widget-ui/*"]
    },
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ]
  },
  "exclude": ["src/app/lib/unsafeBuiltinPlugins", "dist"],
  "include": ["src", "eslint.config.mjs"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
